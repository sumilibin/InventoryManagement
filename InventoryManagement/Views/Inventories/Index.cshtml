@model IEnumerable<InventoryManagement.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventory_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory_Quantity)
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory_Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })|
                @Html.ActionLink("Details", "Details", new { id=item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
